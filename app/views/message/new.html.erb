<%= javascript_pack_tag 'create_message' %>
  <%= render "shared/card_header", title: "Create Message" %>
        <%= form_with(id: "create_message", url: "/message/create", method: "post") do %>
          <div class="form-group">
            <%= label_tag(:recipient, "Recipient: ") %>
            <%= text_field_tag(:recipient, nil, class: "form-text") %>
          </div>
            <%= hidden_field(:message, :image) %>
          </div>
          <div class="form-group">
            <!--<div id="tui-image-editor" style="height: 500px"><canvas></canvas></div>-->
            <canvas id="message_canvas"></canvas>
          </div>
          <%= submit_tag("Send", class: "btn btn-primary") %>
        <% end %>
  <%= render "shared/card_footer" %>
